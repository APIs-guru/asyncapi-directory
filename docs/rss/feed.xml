---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml" />
    {% for api in site.APIs %}
      <item>
        <title>{{ api.name | xml_escape }}</title>
        <description>{{ api.description | xml_escape }}</description>
        <category>AsyncAPI</category>
        <pubDate>{% if api.updated %}{{ api.updated | date: "%a, %d %b %Y %H:%M:%S %z" }}{% else %}{{ 'now' | date: "%a, %d %b %Y %H:%M:%S %z" }}{% endif %}</pubDate>
        <link>{{api.url}}</link>
        <guid isPermaLink="true">{{api.url}}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
